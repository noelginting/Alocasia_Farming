<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">
        <LinearLayout
            android:id="@+id/atas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/spiner_border">

                    <Spinner
                        android:id="@+id/id_tanam_spiner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:spinnerMode="dropdown"></Spinner>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow" />
                </RelativeLayout>

                <Switch
                    android:id="@+id/simpleSwitch"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Alat"
                    android:theme="@style/SwitchTheme"
                    android:textOff="No"
                    android:textOn="Yes"/>
        </LinearLayout>
        <ListView
            android:id="@+id/list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:layout_below="@+id/atas"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp">
        </ListView>
        <LinearLayout
            android:id="@+id/form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/list_view">
            <LinearLayout
                android:id="@+id/formbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_selesai"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:hint="Selesai"
                    android:background="#94B447"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <Button
                    android:id="@+id/btn_catatan"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:hint="Catatan"
                    android:layout_marginLeft="10dp"
                    android:background="#74b9ff"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/catatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="Masukan Catatan"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <EditText
                    android:id="@+id/text_catatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:hint="Catatan"/>
                <EditText
                    android:id="@+id/text_penanganan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_marginBottom="15dp"
                    android:hint="Penanganan"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_batal"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:hint="Batal"
                        android:background="#d31145"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#ffffff"/>
                    <Button
                        android:id="@+id/selesaicttn"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:hint="Simpan"
                        android:background="#94B447"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#ffffff"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/form">
                <ImageView
                    android:id="@+id/ic_kiri_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:layout_marginTop="190dp"
                    android:layout_marginLeft="70dp"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/ic_kiri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_left"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/ic_kanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="325dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_right"/>

                <ViewFlipper
                    android:id="@+id/viewfliper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:padding="0dp"
                    android:background="@android:color/transparent">

                        <lecho.lib.hellocharts.view.ColumnChartView
                            android:id="@+id/chart"
                            android:layout_width="310dp"
                            android:layout_height="180dp"
                            android:layout_gravity="center"/>
                        <lecho.lib.hellocharts.view.ColumnChartView
                            android:id="@+id/chart2"
                            android:layout_width="310dp"
                            android:layout_height="180dp"
                            android:layout_gravity="center"/>
                </ViewFlipper>
                <ImageView
                    android:id="@+id/ic_kirioffset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_left"
                    android:layout_marginTop="190dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_horizontal"/>
                <ImageView
                    android:id="@+id/ic_kananoffset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="190dp"
                    android:layout_marginLeft="33dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_right"/>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>